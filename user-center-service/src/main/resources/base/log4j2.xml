<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} %t [%p] %c{1} (%F:%L) %msg%n"/>
        </Console>

        <!--异步磁盘appender，默认按天&按512M文件大小切分日志，默认最多保留30个日志文件，默认为非阻塞模式-->
        <XMDFile name="INFO-LOG" fileName="info.log" includeLocation="true" rolloverMax="90">
            <Filters><!--log4j2没有logback中的LevelFilter,只能写多个-->
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </XMDFile>

        <!--ERROR日志、WARN日志单独输出到一个文件-->
        <XMDFile name="WARN-LOG" fileName="warn.log" includeLocation="true" rolloverMax="90">
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </XMDFile>
        <XMDFile name="ERROR-LOG" fileName="error.log" includeLocation="true" rolloverMax="90">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
        </XMDFile>

        <!--# jmonitor store-->
        <XMDFile name="jmonitorappender" fileName="jmonitor.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
        </XMDFile>
        <!--# jmonitor meta-->
        <XMDFile name="jmonitorlogstoreappender" fileName="jmonitor.logstore.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
        </XMDFile>


        <Scribe name="ScribeAppender"> <!--可通过scribeCategory属性指定日志名-->
            <LcLayout/>
        </Scribe>
        <Async name="ScribeAsyncAppender" blocking="false">
            <AppenderRef ref="ScribeAppender"/>
        </Async>
    </appenders>

    <loggers>
        <logger name="jmonitor" level="info" includeLocation="true" additivity="false">
            <appender-ref ref="jmonitorappender"/>
            <appender-ref ref="ScribeAsyncAppender"/>
        </logger>
        <logger name="jmonitorlogstore" level="info" includeLocation="true" additivity="false">
            <appender-ref ref="jmonitorlogstoreappender"/>
            <appender-ref ref="ScribeAsyncAppender"/>
        </logger>
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="INFO-LOG"/>
            <appender-ref ref="WARN-LOG"/>
            <appender-ref ref="ERROR-LOG"/>
            <appender-ref ref="ScribeAsyncAppender"/>
        </root>
    </loggers>
</configuration>